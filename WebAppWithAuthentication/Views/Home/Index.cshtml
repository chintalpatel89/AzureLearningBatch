@using Microsoft.Identity.Web.UI.Areas.MicrosoftIdentity.Controllers;

@{
    ViewData["Title"] = "Home Page";
}
@if (User.Identity.IsAuthenticated)
{
    <div>
        <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign Out</a>
        <a href="/MicrosoftIdentity/Account/SignOut">Sign out</a>
    </div>
}
else
{
<div>
    <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign In</a>
    <a href="/MicrosoftIdentity/Account/SignIn">Sign in</a>
</div>
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

